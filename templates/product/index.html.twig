{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>MetaKeyWord</th>
                <th>MetaDescription</th>
                <th>NewUrl</th>
                <th>IfInStock</th>
                <th>IfPreOrder</th>
                <th>Commande</th>
                <th>DisponibilityDate</th>
                <th>AddDate</th>
                <th>DisplayPrice</th>
                <th>Image</th>
                <th>ImageTexte</th>
                <th>DeleteExistingImage</th>
                <th>Caracteristic</th>
                <th>OnlineOnly</th>
                <th>ConditionProduct</th>
                <th>Customisable</th>
                <th>Download</th>
                <th>TextArea</th>
                <th>DeadStock</th>
                <th>Dematerialize</th>
                <th>FileUrl</th>
                <th>DownloadAutorize</th>
                <th>ExpirationDate</th>
                <th>DayNumber</th>
                <th>ShopName</th>
                <th>AvancedStock</th>
                <th>StockFunction</th>
                <th>StockPlace</th>
                <th>Accessories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.metaKeyWord }}</td>
                <td>{{ product.metaDescription }}</td>
                <td>{{ product.newUrl }}</td>
                <td>{{ product.ifInStock }}</td>
                <td>{{ product.ifPreOrder }}</td>
                <td>{{ product.commande }}</td>
                <td>{{ product.disponibilityDate ? product.disponibilityDate|date('Y-m-d') : '' }}</td>
                <td>{{ product.addDate ? product.addDate|date('Y-m-d') : '' }}</td>
                <td>{{ product.displayPrice }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.imageTexte }}</td>
                <td>{{ product.deleteExistingImage ? 'Yes' : 'No' }}</td>
                <td>{{ product.caracteristic }}</td>
                <td>{{ product.onlineOnly ? 'Yes' : 'No' }}</td>
                <td>{{ product.conditionProduct }}</td>
                <td>{{ product.customisable ? 'Yes' : 'No' }}</td>
                <td>{{ product.download ? 'Yes' : 'No' }}</td>
                <td>{{ product.textArea ? 'Yes' : 'No' }}</td>
                <td>{{ product.deadStock }}</td>
                <td>{{ product.dematerialize ? 'Yes' : 'No' }}</td>
                <td>{{ product.fileUrl }}</td>
                <td>{{ product.downloadAutorize ? 'Yes' : 'No' }}</td>
                <td>{{ product.expirationDate }}</td>
                <td>{{ product.dayNumber ? 'Yes' : 'No' }}</td>
                <td>{{ product.shopName }}</td>
                <td>{{ product.avancedStock ? 'Yes' : 'No' }}</td>
                <td>{{ product.stockFunction ? 'Yes' : 'No' }}</td>
                <td>{{ product.stockPlace }}</td>
                <td>{{ product.accessories }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="32">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
